<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  <Id>6b33792b-7186-4211-991e-3818a35ee6fd</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Company</ProviderName>
  <DefaultLocale>en-GB</DefaultLocale>
  <DisplayName DefaultValue="Extract Email Text"/>
  <Description DefaultValue="Extracts and displays the body of the selected Outlook email."/>
  <IconUrl DefaultValue="https://samwakielstonex.github.io/outlook-read-email/assets/cat.png"/>
  <HighResolutionIconUrl DefaultValue="https://samwakielstonex.github.io/outlook-read-email/assets/cat.png"/>
  <SupportUrl DefaultValue="https://samwakielstonex.github.io/support"/>
  <AppDomains>
    <AppDomain>https://samwakielstonex.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://samwakielstonex.github.io/outlook-read-email/taskpane.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ExtractTextGroup">
                <Label resid="ExtractTextGroup.Label"/>
                <Control xsi:type="Button" id="ExtractTextButton">
                  <Label resid="ExtractTextButton.Label"/>
                  <Supertip>
                    <Title resid="ExtractTextButton.SupertipTitle"/>
                    <Description resid="ExtractTextButton.SupertipText"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://samwakielstonex.github.io/outlook-read-email/assets/cat.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://samwakielstonex.github.io/outlook-read-email/assets/cat.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://samwakielstonex.github.io/outlook-read-email/assets/cat.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://samwakielstonex.github.io/outlook-read-email/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="ExtractTextGroup.Label" DefaultValue="Extract Email Text"/>
        <bt:String id="ExtractTextButton.Label" DefaultValue="Extract Text"/>
        <bt:String id="ExtractTextButton.SupertipTitle" DefaultValue="Extract Text"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ExtractTextButton.SupertipText" DefaultValue="Click to extract and display the body of the selected email."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>